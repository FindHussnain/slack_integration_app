<div class="min-h-screen flex items-center justify-center">
  <div class="text-center">
    <h1 class="text-4xl font-bold text-gray-800">Welcome to Our App!</h1>
    <p class="text-gray-600 mt-2">Get started by signing up or logging in.</p>

    <div class="mt-6 space-x-4">
      <% if user_signed_in? %>
        <%= link_to "Log Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "bg-red-500 text-white font-semibold px-6 py-2 rounded-md shadow-md hover:bg-red-600 transition duration-300" %>
      <% else %>
        <%= link_to "Sign Up", new_user_registration_path, class: "bg-emerald-500 text-white px-4 py-2 rounded-md shadow-md hover:bg-emerald-600" %>
        <%= link_to "Log In", new_user_session_path, class: "bg-blue-500 text-white font-semibold px-6 py-2 rounded-md shadow-md hover:bg-blue-600 transition duration-300" %> 
      <% end %>
    </div>
  </div>
</div>

