<div class="max-w-md mx-auto mt-10 bg-white p-6 rounded-lg shadow-md">
  <h2 class="text-2xl font-semibold text-gray-700 text-center mb-4">Resend Unlock Instructions</h2>

  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, class: "block font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
            class: "w-full p-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div>
      <%= f.submit "Resend Unlock Instructions",
            class: "w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
