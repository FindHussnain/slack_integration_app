<div class="max-w-md mx-auto mt-10 p-6 bg-white shadow-lg rounded-lg">
  <h2 class="text-2xl font-bold mb-4 text-center">Login</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <div>
      <%= f.label :email, class: "block font-medium" %>
      <%= f.email_field :email, autofocus: true, class: "w-full p-2 border rounded-md" %>
    </div>

    <div>
      <%= f.label :password, class: "block font-medium" %>
      <%= f.password_field :password, class: "w-full p-2 border rounded-md" %>
    </div>

    <div>
      <%= f.submit "Log in", class: "w-full bg-blue-500 text-white p-2 rounded-md hover:bg-blue-600" %>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= link_to "Sign up", new_user_registration_path, class: "text-blue-500 hover:underline" %> |
    <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-blue-500 hover:underline" %>
  </div>
</div>
