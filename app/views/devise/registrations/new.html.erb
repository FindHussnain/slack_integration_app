<div class="max-w-md mx-auto mt-10 p-6 bg-white shadow-lg rounded-lg">
  <h2 class="text-2xl font-bold mb-4 text-center">Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <div>
      <%= f.label :name, class: "block font-medium text-gray-700" %>
      <%= f.text_field :name, autofocus: true, class: "w-full p-2 border rounded-md focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :email, class: "block font-medium text-gray-700" %>
      <%= f.email_field :email, class: "w-full p-2 border rounded-md focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :password, class: "block font-medium text-gray-700" %>
      <%= f.password_field :password, class: "w-full p-2 border rounded-md focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "block font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, class: "w-full p-2 border rounded-md focus:ring-2 focus:ring-blue-500" %>
    </div>

    <div>
      <%= f.submit "Sign up", class: "w-full bg-green-500 text-white font-semibold p-2 rounded-md shadow-md hover:bg-green-600" %>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= link_to "Log in", new_user_session_path, class: "text-blue-500 hover:underline" %>
  </div>
</div>
